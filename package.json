{
  "name": "@pocket/web-client",
  "version": "1.0.0",
  "description": "Pocket front end client",
  "main": "index.js",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.15.4"
  },
  "packageManager": "pnpm@8.15.4",
  "scripts": {
    "dev": "RELEASE_VERSION=$(git describe --abbrev=0 --tags) SHOW_DEV=included node ./server.local.js",
    "analyze": "ANALYZE=true next build",
    "build": "next build",
    "start": "next start -p 80",
    "start:local": "AS_PRODUCTION=true node ./server.local.js",
    "lint": "next lint",
    "test": "jest --reporters='default'",
    "test:ci": "jest --ci",
    "test:update": "jest --u",
    "test:snowplow": "RELEASE_VERSION=$(git describe --abbrev=0 --tags) SHOW_DEV=included TEST_SNOWPLOW=included node ./server.local.js",
    "storybook": "cd config/storybook-config && pnpm storybook",
    "storybook:build": "cd config/storybook-config && pnpm storybook-build",
    "storybook:start": "pnpm dlx serve config/storybook-config/storybook-static",
    "locale:inject": "node ./common/localization/locale-inject.mjs",
    "locale:parse": "cd common/localization/ && pnpm extract",
    "schema": "rover graph fetch pocket-client-api@current >| schema.graphql",
    "format": "lint-staged",
    "prepare": "husky"
  },
  "jest-junit": {
    "addFileAttribute": "true"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Pocket/web-client.git"
  },
  "author": "",
  "license": "ISC",
  "homepage": "https://github.com/Pocket/web-client#readme",
  "bugs": {
    "url": "https://github.com/Pocket/web-client/issues"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/git",
      [
        "@semantic-release/exec",
        {
          "prepareCmd": "echo ${nextRelease.version} > .version"
        }
      ]
    ]
  },
  "devDependencies": {
    "@apollo/rover": "0.22.0",
    "@commitlint/cli": "^19.1.0",
    "@commitlint/config-conventional": "^19.1.0",
    "@config/eslint-config": "workspace:*",
    "@config/jest": "workspace:^",
    "@config/typescript-config": "workspace:*",
    "@graphql-eslint/eslint-plugin": "3.20.1",
    "@next/eslint-plugin-next": "14.1.3",
    "@semantic-release/changelog": "6.0.3",
    "@semantic-release/commit-analyzer": "11.1.0",
    "@semantic-release/exec": "6.0.3",
    "@semantic-release/git": "10.0.1",
    "@semantic-release/release-notes-generator": "12.1.0",
    "@testing-library/jest-dom": "6.4.2",
    "@testing-library/react": "14.2.1",
    "@testing-library/user-event": "14.5.2",
    "@types/node": "20.11.27",
    "@types/react": "18.2.65",
    "eslint": "8.57.0",
    "graphql": "16.8.1",
    "husky": "9.0.11",
    "jest": "29.7.0",
    "jest-environment-jsdom": "29.7.0",
    "jest-junit": "16.0.0",
    "lint-staged": "15.2.2",
    "next-router-mock": "0.9.12",
    "prettier": "3.2.5",
    "typescript": "5.4.2"
  },
  "dependencies": {
    "@braze/web-sdk": "5.1.1",
    "@emotion/cache": "11.11.0",
    "@emotion/css": "11.11.2",
    "@emotion/react": "11.11.4",
    "@freestar/pubfig-adslot-react-component": "3.6.1",
    "@n8tb1t/use-scroll-position": "2.0.3",
    "@popperjs/core": "2.11.8",
    "@sentry/integrations": "7.106.1",
    "@sentry/nextjs": "7.106.1",
    "@types/jest": "^29.5.12",
    "@ui/icons": "workspace:*",
    "body-scroll-lock": "4.0.0-beta.0",
    "clipboard-copy": "4.0.1",
    "dayjs": "1.11.10",
    "diff-match-patch": "1.0.5",
    "dompurify": "3.0.9",
    "intersection-observer": "0.12.2",
    "jsonwebtoken": "9.0.2",
    "match-sorter": "6.3.4",
    "mousetrap": "1.6.5",
    "next": "14.1.3",
    "next-i18next": "15.2.0",
    "next-redux-saga": "4.1.2",
    "next-redux-wrapper": "8.1.0",
    "node-fetch": "3.3.2",
    "nookies": "2.5.2",
    "prop-types": "15.8.1",
    "query-string": "9.0.0",
    "react": "18.2.0",
    "react-beautiful-dnd": "13.1.1",
    "react-dom": "18.2.0",
    "react-google-recaptcha": "3.1.0",
    "react-joyride": "2.7.4",
    "react-markdown": "9.0.1",
    "react-modal": "3.16.1",
    "react-popper": "2.3.0",
    "react-redux": "9.1.0",
    "react-swipeable": "7.0.1",
    "react-textarea-autosize": "8.5.3",
    "react-visibility-sensor": "5.1.1",
    "redux": "5.0.1",
    "redux-saga": "1.3.0",
    "sharp": "0.33.2",
    "storage-factory": "0.2.1",
    "validator": "13.11.0"
  }
}
