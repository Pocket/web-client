{
  "extends": "@config/typescript-config/nextjs.json",
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "lib": ["dom"],
    "outDir": "dist",
    "removeComments": true,
    "esModuleInterop": true,
    "noEmitOnError": true,
    "sourceMap": true,
    "inlineSources": true,
    "sourceRoot": "/",
    "strictNullChecks": true
  },
  "include": ["**/*.ts", "eslint.config.mjs"],
  "exclude": ["node_modules", "dist"]
}
