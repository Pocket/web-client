{
  "widgets": [
    {
      "type": "metric",
      "x": 12,
      "y": 0,
      "width": 12,
      "height": 6,
      "properties": {
        "metrics": [
          [ "AWS/ECS", "CPUUtilization", "ServiceName", "${ecs_service_name}", "ClusterName", "${ecs_cluster_name}", { "period": 60 } ],
          [ ".", "MemoryUtilization", ".", ".", ".", ".", { "period": 60 } ],
          [ ".", "CPUUtilization", ".", ".", ".", ".", { "period": 60, "stat": "SampleCount", "label": "Running Tasks", "yAxis": "right" } ]
        ],
        "view": "timeSeries",
        "stacked": false,
        "region": "us-east-1",
        "title": "Service Load",
        "period": 300,
        "annotations": {
          "horizontal": [
            {
              "label": "CPU Scale Out",
              "value": ${cpu_scale_out}
            },
            {
              "label": "CPU Scale In",
              "value": ${cpu_scale_in}
            }
          ]
        }
      }
    },
    {
      "type": "metric",
      "x": 0,
      "y": 0,
      "width": 12,
      "height": 6,
      "properties": {
        "metrics": [
          [ "AWS/ApplicationELB", "HTTPCode_Target_2XX_Count", "TargetGroup", "${target_group_arn_suffix}", "LoadBalancer", "${alb_arn_suffix}", { "stat": "Sum", "period": 60 } ],
          [ ".", "HTTPCode_Target_5XX_Count", ".", ".", { "stat": "Sum", "period": 60, "yAxis": "right" } ],
          [ ".", "RequestCount", ".", ".", { "stat": "Sum", "period": 60 } ],
          [ ".", "HTTPCode_Target_4XX_Count", ".", ".", { "stat": "Sum", "period": 60 } ]
        ],
        "view": "timeSeries",
        "stacked": false,
        "region": "us-east-1",
        "title": "ALB Request Counts",
        "period": 300,
        "annotations": {
          "horizontal": [
            {
              "label": "High Threshold",
              "value": ${requests_high_threshold}
            }
          ]
        }
      }
    },
    {
      "type": "metric",
      "x": 0,
      "y": 6,
      "width": 12,
      "height": 6,
      "properties": {
        "metrics": [
          [ "AWS/ApplicationELB", "TargetResponseTime", "TargetGroup", "${target_group_arn_suffix}", "LoadBalancer", "${alb_arn_suffix}", { "period": 60, "stat": "p95", "label": "P95" } ],
          [ "...", { "period": 60, "stat": "Average", "label": "Average" } ]
        ],
        "view": "timeSeries",
        "stacked": false,
        "region": "us-east-1",
        "title": "ALB Response Times",
        "period": 300,
        "annotations": {
          "horizontal": [
            {
              "label": "Max Threshold",
              "value": ${response_max_threshold}
            }
          ]
        }
      }
    }
  ]
}